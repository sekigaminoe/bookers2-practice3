<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Group</h2>

      <%= form_with model: @group, url: group_path, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :グループ名 %>
          <%= f.text_field :name, class: "form-control group-name" %>
        </div>
        <div class="form-group">
          <%= f.label :紹介文 %>
          <%= f.text_area :introduction, class: "form-control group-introduction" %>
        </div>
        <div class="form-group">
          <%= f.label :グループ画像 %>
          <%= f.file_field :group_image, accept: "image/*", class: "form-control-file group-image" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Group", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>