<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Event Mail</h2>
      <%= form_with url: group_event_notices_path(@group), method: :post do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control event_notice-title" %>
        </div>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :body, class: "form-control event_notice-body" %>
        </div>
        <div class="form-group">
          <%= f.submit "送信", class: "btn btn-success justify-content-right" %>
        </div>
      <% end %>
    </div>
  </div>
</div>